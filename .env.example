############################
# Application
############################
APP_NAME=Graph AML Investigator
APP_ENV=dev  # dev | prod
APP_VERSION=0.1.0
LOG_LEVEL=INFO

############################
# Storage / Models
############################
DATA_DIR=./data
MODEL_DIR=./models/baseline
SQLITE_URL=sqlite+aiosqlite:///./graph_aml.db

############################
# Neo4j (optional)
############################
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASS=testtest
# Optional database name (compat)
NEO4J_DATABASE=neo4j

############################
# API Auth (optional simple bearer)
############################
# Set to a value (e.g., 'changeme') to enable simple bearer auth
API_AUTH_TOKEN=

############################
# Graph / Explain Defaults
############################
GRAPH_PAGE_RANK_ALPHA=0.85
EXPLAIN_MAX_PATH_LEN=6
EXPLAIN_K_PATHS=5
